<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="#ffffff"
              android:minWidth="350dp"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tvAddPlanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/gp_button_color_default"
        android:gravity="center"
        android:padding="8dp"
        android:text="DELETE DATA PLAN"
        android:textColor="#ffffff"
        android:textSize="18sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:weightSum="10">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="3"
            android:src="@drawable/deleteplan"/>

        <TextView
            android:id="@+id/tvDataPackageSize"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="3dp"
            android:layout_weight="7"
            android:text="@string/data_plan_delete"
            android:textColor="#000"
            android:textSize="18sp"

            />


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gp_button_color_default"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btdeleteCancelButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gp_button_color_default"
            android:text="Cancel"
            android:textColor="#fff"/>

        <TextView
            android:layout_width="1dp"
            android:layout_height="35dp"
            android:layout_gravity="center_vertical"
            android:background="#fff"
            android:gravity="center_vertical"/>

        <Button
            android:id="@+id/btDeleteNetPlan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/gp_button_color_default"
            android:text="@string/delete"
            android:textColor="#fff"/>

    </LinearLayout>

</LinearLayout>