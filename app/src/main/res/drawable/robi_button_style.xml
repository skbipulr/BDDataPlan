<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="@color/robi_button_color_pressed" android:startColor="#CCFE0000" />

            <stroke android:width="3dp" android:color="@color/robi_button_color_pressed" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
        
    <item android:state_focused="true"><shape>
            <gradient android:angle="270" android:endColor="@color/robi_button_color_default" android:startColor="@color/robi_button_color_default" />

            <stroke android:width="3dp" android:color="@color/robi_button_color_default" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>
        
    <item><shape>
            <gradient android:angle="270" android:endColor="@color/robi_button_color_default" android:startColor="@color/robi_button_color_default" />

            <stroke android:width="3dp" android:color="@color/robi_button_color_default" />

            <corners android:radius="3dp" />

            <padding android:bottom="10dp" android:left="10dp" android:right="10dp" android:top="10dp" />
        </shape></item>

</selector>