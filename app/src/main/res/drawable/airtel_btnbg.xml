<?xml version="1.0" encoding="utf-8"?>
<selector
  xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="@color/airtel_button_color_pressed" />
            <stroke android:width="1dp" android:color="#ffb53944" />
            <corners android:radius="3dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
    <item>
        <shape>
            <gradient android:startColor="@color/airtel_button_color_default" android:endColor="#ffce535f" android:angle="270.0" />
            <stroke android:width="1dp" android:color="@android:color/white" />
            <corners android:radius="4dp" />
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp" />
        </shape>
    </item>
</selector>